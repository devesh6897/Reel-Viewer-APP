<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Profile Picture -->

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:use_controller="false"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/liked"
            android:layout_width="111dp"
            android:layout_height="128dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="350dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="0" />

        <ImageView
            android:id="@+id/mute"
            android:layout_width="111dp"
            android:layout_height="128dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="350dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="0" />

        <TextView
            android:id="@+id/reelsss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REELS"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

    </androidx.media3.ui.PlayerView>

    <ImageView
        android:id="@+id/pp"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="100dp"

        android:src="@drawable/pngegg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Username -->
    <TextView
        android:id="@+id/user"
        android:layout_width="183dp"
        android:layout_height="37dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="100dp"
        android:text="Username"
        android:textColor="@android:color/white"
        android:textStyle="bold"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/descp"
        android:layout_width="352dp"
        android:layout_height="68dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"

        android:text="This is the description."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pp" />
    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="400dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_favorite_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/likeCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/likeButton"
        app:layout_constraintStart_toStartOf="@id/likeButton"
        app:layout_constraintEnd_toEndOf="@id/likeButton" />

    <!-- Comment Button -->
    <ImageButton
        android:id="@+id/commentButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_comment"
        app:layout_constraintTop_toBottomOf="@id/likeCountText"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_share"
        app:layout_constraintTop_toBottomOf="@id/commentButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/download"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/download"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shareButton" />


</androidx.constraintlayout.widget.ConstraintLayout>
